{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.6",
  "requires": {
    "responsiveLayout": "1.0"
  },
  "fallback": {
    "type": "TextBlock",
    "text": "Adaptive Cards not supported"
  },
  "body": [
    {
      "type": "TextBlock",
      "text": "targetWidth = veryNarrow",
      "wrap": true,
      "targetWidth": "veryNarrow"
    },
    {
      "type": "TextBlock",
      "text": "targetWidth = narrow",
      "wrap": true,
      "targetWidth": "narrow"
    },
    {
      "type": "TextBlock",
      "text": "targetWidth = standard",
      "wrap": true,
      "targetWidth": "standard"
    },
    {
      "type": "TextBlock",
      "text": "targetWidth = wide",
      "wrap": true,
      "targetWidth": "wide"
    }
  ],
  "msTeams": {
    "width": "full"
  }
}
